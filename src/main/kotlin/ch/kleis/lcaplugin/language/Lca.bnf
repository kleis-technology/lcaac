/*
    Exchanges
 */

technoInputExchange ::= quantityExpression productRef fromProcessConstraint? {
    implements=["ch.kleis.lcaplugin.language.psi.type.exchange.PsiTechnoInputExchange"]
    mixin="ch.kleis.lcaplugin.language.psi.mixin.exchange.PsiTechnoInputExchangeMixin"
