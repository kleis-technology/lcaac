    mixin="ch.kleis.lcaplugin.language.psi.mixin.block.PsiBlockResourcesMixin"
}

block_impacts ::= IMPACTS_KEYWORD LBRACE impactExchange* RBRACE {
    implements=["ch.kleis.lcaplugin.language.psi.type.block.PsiBlockImpacts"]
