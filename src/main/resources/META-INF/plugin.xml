<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>ch.kleis.lcaplugin</id>
    <name>Life-Cycle Analysis as Code</name>
    <vendor
            url="https://kleis.ch"
            email="contact@kleis.ch"
    >
        Kleis
    </vendor>
    <description>
        <![CDATA[
        Adds support for a new domain-specific language targeting <i>Life Cycle Analysis</i> experts. The following features are available for free.
        <ul>
            <li>EF 3.1 flows and characterization factors from the <a href="https://eplca.jrc.ec.europa.eu/LCDN/developerEF.xhtml">European Platform on Life Cycle Assessment</a></li>
            <li>Description of processes, intermediary and elementary flows, with parameters.</li>
            <li>Embedded inventory computation engine.</li>
            <li>Code navigation.</li>
        </ul>
    ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">

        <moduleType
                id="LCA_MODULE_TYPE"
                implementationClass="ch.kleis.lcaplugin.project.LcaModuleType"/>

        <applicationService serviceImplementation="ch.kleis.lcaplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="ch.kleis.lcaplugin.services.LcaProjectService"/>
        <fileType
                name="LCA Definition File"
                implementationClass="ch.kleis.lcaplugin.LcaFileType"
                fieldName="INSTANCE"
                language="LCA"
                extensions="lca"/>
        <lang.parserDefinition
                language="LCA"
                implementationClass="ch.kleis.lcaplugin.language.parser.LcaParserDefinition"/>

        <lang.findUsagesProvider language="LCA"
                                 implementationClass="ch.kleis.lcaplugin.language.find_usages.LcaFindUsagesProvider"/>

        <lang.commenter
            language="LCA"
            implementationClass="ch.kleis.lcaplugin.language.LcaCommenter"/>

        <completion.contributor
                language="LCA"
                implementationClass="ch.kleis.lcaplugin.language.completion.LcaBasicCompletionContributor"
            />

        <annotator
                language="LCA"
                implementationClass="ch.kleis.lcaplugin.language.ide.insight.LcaInputExchangeAnnotator"/>
        <annotator
                language="LCA"
                implementationClass="ch.kleis.lcaplugin.language.ide.insight.LcaBioExchangeAnnotator"/>

        <runLineMarkerContributor
                language="LCA"
                implementationClass="ch.kleis.lcaplugin.language.ide.insight.AssessPackageMarkerContributor"/>

        <lang.foldingBuilder
                language="LCA"
                implementationClass="ch.kleis.lcaplugin.language.ide.syntax.LcaFoldingBuilder"/>
        <lang.foldingBuilder
                language="LCA"
                implementationClass="ch.kleis.lcaplugin.language.ide.syntax.LcaStringFoldingBuilder"/>

        <lang.syntaxHighlighterFactory
                language="LCA"
                implementationClass="ch.kleis.lcaplugin.language.ide.syntax.LcaSyntaxHighlighterFactory"/>
        <lang.psiStructureViewFactory
                language="LCA"
                implementationClass="ch.kleis.lcaplugin.language.ide.structure.LcaStructureViewFactory"/>
        <navbar implementation="ch.kleis.lcaplugin.language.ide.structure.LcaStructureAwareNavbar"/>
        <lang.formatter
                language="LCA"
                implementationClass="ch.kleis.lcaplugin.language.ide.style.LcaFormattingModelBuilder"/>
        <lang.braceMatcher language="LCA"
                           implementationClass="ch.kleis.lcaplugin.language.ide.syntax.LcaBraceMatcher"/>

        <additionalLibraryRootsProvider
                implementation="ch.kleis.lcaplugin.project.LcaRootLibraryProvider"/>

        <stubIndex implementation="ch.kleis.lcaplugin.language.psi.stub.ProductExchangeKeyIndex"/>
        <stubIndex implementation="ch.kleis.lcaplugin.language.psi.stub.SubstanceKeyIndex"/>
        <stubElementTypeHolder class="ch.kleis.lcaplugin.psi.LcaTypes" externalIdPrefix="lca."/>

        <filetype.prebuiltStubsProvider filetype="LCA"
                                        implementationClass="ch.kleis.lcaplugin.project.libraries.SubstanceStubsProvider"/>

        <toolWindow id="LCA Output"
                    icon="AllIcons.General.Modified"
                    anchor="bottom"
                    factoryClass="ch.kleis.lcaplugin.ui.toolwindow.LcaResultFactory"
                    canCloseContents="true"
        />
    </extensions>

    <actions>
        <action id="Lca.NewFile" class="ch.kleis.lcaplugin.actions.NewLcaFileAction"
                text="LCA Processes" description="Create a LCA file containing processes">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
        </action>
        <action id="ch.kleis.lcaplugin.actions.ImportScsvFileAction"
                class="ch.kleis.lcaplugin.actions.ImportScsvFileAction" text="Import Simapro CSV..."
                description="Import Simapro CSV...">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>

    <applicationListeners>
        <listener class="ch.kleis.lcaplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
