<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.albanseurat.lcaplugin</id>
    <name>lca-plugin</name>
    <vendor>albanseurat</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">

        <moduleType
                id="LCA_MODULE_TYPE"
                implementationClass="com.github.albanseurat.lcaplugin.project.LcaModuleType"/>

        <applicationService serviceImplementation="com.github.albanseurat.lcaplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.albanseurat.lcaplugin.services.LcaProjectService"/>
        <fileType
                name="LCA Definition File"
                implementationClass="com.github.albanseurat.lcaplugin.LcaFileType"
                fieldName="INSTANCE"
                language="LCA"
                extensions="lca"/>

        <psi.referenceContributor language="LCA"
                                  implementation="com.github.albanseurat.lcaplugin.language.reference.LcaReferenceContributor"/>
        <lang.parserDefinition
                language="LCA"
                implementationClass="com.github.albanseurat.lcaplugin.language.parser.LcaParserDefinition"/>
        <annotator
                language="LCA"
                implementationClass="com.github.albanseurat.lcaplugin.language.ide.insight.LcaAnnotator"/>
        <codeInsight.lineMarkerProvider
                language="LCA"
                implementationClass="com.github.albanseurat.lcaplugin.language.ide.insight.LcaLineMarkerProvider"/>
        <lang.foldingBuilder
                language="LCA"
                implementationClass="com.github.albanseurat.lcaplugin.language.ide.syntax.LcaFoldingBuilder"/>
        <lang.foldingBuilder
                language="LCA"
                implementationClass="com.github.albanseurat.lcaplugin.language.ide.syntax.LcaStringFoldingBuilder"/>

        <lang.syntaxHighlighterFactory
                language="LCA"
                implementationClass="com.github.albanseurat.lcaplugin.language.ide.syntax.LcaSyntaxHighlighterFactory"/>
        <lang.psiStructureViewFactory
                language="LCA"
                implementationClass="com.github.albanseurat.lcaplugin.language.ide.structure.LcaStructureViewFactory"/>
        <navbar implementation="com.github.albanseurat.lcaplugin.language.ide.structure.LcaStructureAwareNavbar"/>

        <lang.formatter
                language="LCA"
                implementationClass="com.github.albanseurat.lcaplugin.language.ide.style.LcaFormattingModelBuilder"/>

        <lang.braceMatcher language="LCA"
                           implementationClass="com.github.albanseurat.lcaplugin.language.ide.syntax.LcaBraceMatcher"/>

    </extensions>

    <actions>
        <action id="Lca.NewFile" class="com.github.albanseurat.lcaplugin.actions.NewLcaFileAction"
                text="LCA Datasets" description="Create a LCA file containing datasets">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
        </action>
    </actions>

    <applicationListeners>
        <listener class="com.github.albanseurat.lcaplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
